{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Hidrometro Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                // 1. COMPILAR TODOS OS SEUS ARQUIVOS .CPP
                // Certifique-se de que todos os seus arquivos .cpp estão na raiz ou na pasta 'components'
                "${workspaceFolder}/*.cpp",         // Compila .cpp da pasta raiz (main.cpp, Hidrometro.cpp, etc.)
                "${workspaceFolder}/components/*.cpp",  // Compila .cpp da pasta de componentes
                
                // 2. CAMINHOS PARA SFML
                "-I",
                "C:/SFML-3.0.2/include",
                "-L",
                "C:/SFML-3.0.2/lib",
                
                // 3. ARQUIVO DE SAÍDA
                "-o",
                "${workspaceFolder}/bin/hidrometro.exe",
                
                // 4. FLAGS E BIBLIOTECAS (LINKAGEM)
                "-DSFML_STATIC",
                "-lsfml-graphics-s",
                "-lsfml-window-s",
                "-lsfml-system-s",
                "-lfreetype",
                "-lopengl32",
                "-lwinmm",
                "-lgdi32",
                "-lws2_32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}